{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ES6"],
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*", "main.ts"],
    "exclude": ["node_modules"],
    "lib": ["esnext"],
    "ts-node": {
        "esm": true
    }
}
